# Environment Configuration for AI GitOps Network Automation
# Copy this file to .env and customize with your values

# =============================================================================
# n8n Configuration
# =============================================================================
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=secure_password_change_me
N8N_HOST=0.0.0.0
N8N_PORT=5678
N8N_PROTOCOL=http
WEBHOOK_URL=http://localhost:5678
N8N_METRICS=true
N8N_LOG_LEVEL=info

# =============================================================================
# Database Configuration
# =============================================================================
DB_TYPE=postgresdb
DB_POSTGRESDB_HOST=postgres
DB_POSTGRESDB_PORT=5432
DB_POSTGRESDB_DATABASE=n8n
DB_POSTGRESDB_USER=n8n
DB_POSTGRESDB_PASSWORD=n8n_db_password_change_me

POSTGRES_DB=n8n
POSTGRES_USER=n8n
POSTGRES_PASSWORD=n8n_db_password_change_me

# =============================================================================
# AI Integration (OpenAI)
# =============================================================================
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.1

# Alternative AI Services
# CLAUDE_API_KEY=your-claude-api-key-here
# AZURE_OPENAI_KEY=your-azure-openai-key-here
# AZURE_OPENAI_ENDPOINT=your-azure-endpoint-here

# =============================================================================
# NetBox Integration
# =============================================================================
NETBOX_URL=https://your-netbox-instance.com
NETBOX_TOKEN=your-netbox-api-token-here
NETBOX_API_VERSION=2.8

# =============================================================================
# GitLab Integration
# =============================================================================
GITLAB_URL=https://gitlab.your-company.com
GITLAB_TOKEN=your-gitlab-api-token-here
GITLAB_PROJECT_ID=123
GITLAB_REGISTRATION_TOKEN=your-runner-registration-token

# =============================================================================
# ServiceNow Integration
# =============================================================================
SERVICENOW_URL=https://your-instance.service-now.com
SERVICENOW_USERNAME=automation-user
SERVICENOW_PASSWORD=your-servicenow-password
# Base64 encoded username:password for basic auth
SERVICENOW_AUTH=base64-encoded-credentials

# =============================================================================
# Network Device Access
# =============================================================================
NETWORK_USERNAME=automation
NETWORK_PASSWORD=your-network-password
NETWORK_ENABLE_PASSWORD=your-enable-password
NETWORK_SSH_KEY_PATH=/root/.ssh/network_automation_key

# =============================================================================
# Team Configuration
# =============================================================================
NETWORK_TEAM_LEAD_ID=123
SENIOR_NETWORK_ENGINEER_ID=456
SECURITY_REVIEWER_ID=789
CHANGE_MANAGER_ID=101

# =============================================================================
# Notification Integration
# =============================================================================
# Slack
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SLACK_CHANNEL=#network-automation
SLACK_USERNAME=NetworkBot

# Microsoft Teams
TEAMS_WEBHOOK_URL=https://your-company.webhook.office.com/webhookb2/YOUR-WEBHOOK
TEAMS_CHANNEL=Network Operations

# Email (SMTP)
SMTP_SERVER=smtp.your-company.com
SMTP_PORT=587
SMTP_USERNAME=automation@your-company.com
SMTP_PASSWORD=your-smtp-password
SMTP_FROM=network-automation@your-company.com
SMTP_TO=network-team@your-company.com

# PagerDuty
PAGERDUTY_INTEGRATION_KEY=your-pagerduty-integration-key
PAGERDUTY_SERVICE_ID=your-service-id

# =============================================================================
# Monitoring Configuration
# =============================================================================
# Grafana
GF_SECURITY_ADMIN_PASSWORD=admin_change_me
GF_INSTALL_PLUGINS=grafana-piechart-panel,grafana-worldmap-panel

# Prometheus
PROMETHEUS_RETENTION_TIME=30d
PROMETHEUS_STORAGE_LOCAL_PATH=/prometheus
PROMETHEUS_WEB_EXTERNAL_URL=http://localhost:9090

# =============================================================================
# Security Configuration
# =============================================================================
# Ansible Vault
ANSIBLE_VAULT_PASSWORD=your-ansible-vault-password

# SSL/TLS Certificates (if using HTTPS)
SSL_CERT_PATH=/etc/ssl/certs/your-cert.pem
SSL_KEY_PATH=/etc/ssl/private/your-key.pem

# JWT Secrets
JWT_SECRET=your-jwt-secret-for-api-authentication

# =============================================================================
# Pipeline Configuration
# =============================================================================
# CI/CD Settings
CI_CONCURRENT_LIMIT=3
CI_CHECK_INTERVAL=30
CI_BUILD_TIMEOUT=3600

# Deployment Windows
MAINTENANCE_WINDOW_START=02:00
MAINTENANCE_WINDOW_END=06:00
TIMEZONE=UTC

# Rollback Settings
AUTO_ROLLBACK_ENABLED=true
ROLLBACK_TIMEOUT=300

# =============================================================================
# Backup Configuration
# =============================================================================
BACKUP_RETENTION_DAYS=90
BACKUP_LOCATION=/opt/backups
BACKUP_ENCRYPTION_KEY=your-backup-encryption-key

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE_MAX_SIZE=100MB
LOG_FILE_MAX_FILES=10

# =============================================================================
# Performance Tuning
# =============================================================================
# Ansible Performance
ANSIBLE_FORKS=10
ANSIBLE_POLL_INTERVAL=15
ANSIBLE_TIMEOUT=30

# Database Performance
POSTGRES_MAX_CONNECTIONS=100
POSTGRES_SHARED_BUFFERS=256MB
POSTGRES_WORK_MEM=4MB

# Redis Performance
REDIS_MAXMEMORY=512mb
REDIS_MAXMEMORY_POLICY=allkeys-lru

# =============================================================================
# Development/Debug Settings
# =============================================================================
DEBUG_MODE=false
VERBOSE_LOGGING=false
ENABLE_API_DEBUG=false

# Test Environment Settings
TEST_MODE=false
MOCK_NETWORK_DEVICES=false
DRY_RUN_DEFAULT=true

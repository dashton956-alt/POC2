# GitLab CI/CD Pipeline Environment Variables Template
# Copy this file to .env and fill in your actual values

# ===== NETBOX CONFIGURATION =====
NETBOX_URL=http://localhost:8000
NETBOX_TOKEN=your-netbox-api-token-here
NETBOX_USERNAME=admin
NETBOX_PASSWORD=admin

# ===== N8N CONFIGURATION =====
N8N_URL=http://localhost:5678
N8N_API_KEY=your-n8n-api-key-here
N8N_USERNAME=admin
N8N_PASSWORD=admin

# ===== GITLAB RUNNER CONFIGURATION =====
GITLAB_URL=https://gitlab.example.com
GITLAB_TOKEN=your-gitlab-runner-registration-token
GITLAB_PROJECT_TOKEN=your-gitlab-project-token
RUNNER_NAME=poc2-automation-runner
RUNNER_DESCRIPTION="POC2 Automation Pipeline Runner"
RUNNER_TAGS="docker,netbox,n8n,automation"

# ===== DATABASE CONFIGURATION =====
DATABASE_URL=postgresql://netbox:J5brHrAXFLQSif0K@postgres:5432/netbox
POSTGRES_DB=netbox
POSTGRES_USER=netbox
POSTGRES_PASSWORD=J5brHrAXFLQSif0K
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

REDIS_URL=redis://redis:6379/0
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DATABASE=0

# ===== ENVIRONMENT SETTINGS =====
ENVIRONMENT=development
CI_ENVIRONMENT_NAME=development
CI_PROJECT_NAME=poc2-automation
CI_COMMIT_REF_NAME=main

# ===== SECURITY SETTINGS =====
SECRET_KEY=your-secret-key-for-encryption
ALLOWED_HOSTS=localhost,127.0.0.1,netbox,n8n

# ===== NOTIFICATION SETTINGS =====
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url
SLACK_CHANNEL=#devops
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your/webhook/url
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=notifications@example.com
EMAIL_PASSWORD=your-email-password

# ===== BACKUP SETTINGS =====
BACKUP_ENABLED=true
BACKUP_SCHEDULE=daily
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1

# ===== MONITORING SETTINGS =====
MONITORING_ENABLED=true
PROMETHEUS_URL=http://prometheus:9090
GRAFANA_URL=http://grafana:3000
GRAFANA_API_KEY=your-grafana-api-key

# ===== DOCKER SETTINGS =====
DOCKER_BUILDKIT=1
COMPOSE_DOCKER_CLI_BUILD=1
DOCKER_REGISTRY=registry.gitlab.com/your-group/poc2
DOCKER_IMAGE_TAG=latest

# ===== DEBUG SETTINGS =====
DEBUG=false
LOG_LEVEL=INFO
VERBOSE=false

# ===== PIPELINE SETTINGS =====
PIPELINE_TIMEOUT=3600
MAX_RETRY_ATTEMPTS=3
HEALTH_CHECK_TIMEOUT=30
DEPLOYMENT_TIMEOUT=600

# ===== FEATURE FLAGS =====
ENABLE_WORKFLOWS=true
ENABLE_BACKUPS=true
ENABLE_MONITORING=true
ENABLE_NOTIFICATIONS=true
SKIP_SSL_VERIFY=false
